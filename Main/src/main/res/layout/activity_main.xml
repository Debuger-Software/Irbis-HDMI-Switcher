<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="pl.debuger.irbishdmi.MainActivity"
    android:background="#4f4f4f">
    <RelativeLayout
        android:id="@+id/adsdkContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" >
    </RelativeLayout>

    <Switch
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:text="HDMI Support"
        android:id="@+id/switch1"
        android:textOn="@string/enabled"
        android:textOff="@string/disabled"
        android:checked="true"
        android:gravity="center|center_vertical"
        android:layout_below="@+id/textView"
        android:layout_marginTop="20dp"
        android:textColor="@android:color/white"/>
    <Switch
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:text="CPU BOOST"
        android:id="@+id/switchCPU"
        android:textOn="@string/enabled"
        android:textOff="@string/disabled"
        android:layout_centerVertical="true"
        android:checked="true"
        android:gravity="center|center_vertical"
        android:layout_below="@+id/switch1"
        android:textColor="@android:color/white"/>
    <Switch
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:text="GPU BOOST"
        android:id="@+id/switchGPU"
        android:textOn="@string/enabled"
        android:textOff="@string/disabled"
        android:layout_centerVertical="true"
        android:checked="true"
        android:gravity="center|center_vertical"
        android:layout_below="@id/switchCPU"
        android:textColor="@android:color/white"/>
    
    <Button
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_below="@+id/switchGPU"
        android:text="@string/apply"
        android:gravity="center"
        android:onClick="applyOnClick"
        android:textColor="@android:color/black"
        android:background="@android:color/holo_green_dark"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/app_descr"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:textColor="#ffffff" />


</RelativeLayout>
